    <%= form.label :start_date, "Início" %>
    <%= form.datetime_select :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date, "Fim" %>
    <%= form.datetime_select :end_date %>
  </div>

  <div class="actions">
    <%= form.submit "Salvar Evento" %>
  </div>
<% end %>
