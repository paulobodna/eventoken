<p id="notice"><%= notice %></p>

<h1>Eventos</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Início</th>
      <th>Fim</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.description %></td>
        <td><%= l event.start_date, format: '%D - %H:%M' %></td>
        <td><%= l event.end_date, format: '%D - %H:%M' %></td>
        <td><%= link_to 'Ver', event %></td>
        <td><%= link_to 'Editar', edit_event_path(event) %></td>
        <td><%= link_to 'Deletar', event, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar Evento', new_event_path %> |
<%= link_to 'Voltar', root_path %>
